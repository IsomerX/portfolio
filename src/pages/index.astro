---
// Component Imports
import MainHead from '../components/MainHead.astro'
import Nav from '../components/Nav.astro'
import Banner from '../components/Banner/index.astro'
import Project from '../components/Projects/index.astro'
import { projects } from '../projects_data'
import Footer from '../components/Footer.astro'
import TierList from '../components/Skills/TierList.astro'
---

<html lang='en'>
  <head>
    <MainHead
      title='Dhruv Bakshi: Portfolio'
      description='Dhruv Bakshi: Frontend Web Developer'
    />
  </head>
  <body class='overflow-x-hidden'>
    <div class='wrapper min-h-screen flex flex-col md:gap-5'>
      <Nav />
      <Banner />
    </div>
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-full md:w-4/5 mx-auto'
    >
      SKILLS BELOW ðŸ‘‡
    </div>
    <TierList />
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-full md:w-4/5 mx-auto'
    >
      PROJECTS BELOW ðŸ‘‡
    </div>

    <div class='wrapper'>
      <div class='flex flex-col gap-16 md:gap-52'>
        {
          projects.map((item, idx) => (
            <Project
              index={idx}
              heading={item.heading}
              image={item.image}
              mimage={item.mimage}
              description={item.description}
            />
          ))
        }
      </div>
    </div>
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-full md:w-4/5 mx-auto'
    >
      WORK EXPERIENCE TIMELINE BELOW ðŸ‘‡
    </div>
    <Footer />
    <script>
      import '../scripts/Almost'
    </script>
  </body>
</html>

---
// Component Imports
import MainHead from '../components/MainHead.astro'
import Nav from '../components/Nav.astro'
import Banner from '../components/Banner/index.astro'
import Project from '../components/Projects/index.astro'
import { projects } from '../projects_data'
import Footer from '../components/Footer.astro'
import TierList from '../components/Skills/TierList.astro'
import TIMELINE from '../timeline'
---

<html lang='en'>
  <head>
    <MainHead
      title='Dhruv Bakshi: Portfolio'
      description='Dhruv Bakshi: Frontend Web Developer'
    />
  </head>
  <body class='overflow-x-hidden'>
    <div
      class='wrapper min-h-screen justify-center lg:justify-start flex flex-col md:gap-5'
    >
      <Nav />
      <Banner />
    </div>
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-[90%] lg:w-4/5 mx-auto'
    >
      SKILLS BELOW ðŸ‘‡
    </div>
    <TierList />
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-[90%] lg:w-4/5 mx-auto'
    >
      PROJECTS BELOW ðŸ‘‡
    </div>

    <div class='wrapper'>
      <div class='flex flex-col gap-16 md:gap-52'>
        {
          projects.map((item, idx) => (
            <Project
              link={item.link}
              index={idx}
              heading={item.heading}
              image={item.image}
              mimage={item.mimage}
              description={item.description}
            />
          ))
        }
      </div>
    </div>
    <div
      class='text-3xl font-amatic text-center bg-black/40 rounded-xl shadow-xl shadow-black text-white py-40 my-40 w-[90%] lg:w-4/5 mx-auto'
    >
      WORK EXPERIENCE TIMELINE BELOW ðŸ‘‡
    </div>
    <div class='wrapper space-y-20'>
      {
        Object.keys(TIMELINE)
          .sort()
          .reverse()
          .map((item) => {
            return (
              <div class='flex flex-col lg:flex-row justify-between'>
                <h2 class='w-full lg:w-1/2 text-center font-bungee text-6xl mb-10 lg:mb-0 lg:text-5xl text-lime-200 md:text-7xl'>
                  {item}
                </h2>
                <div class='flex w-full lg:w-1/2 flex-col gap-10'>
                  {TIMELINE[item as keyof typeof TIMELINE].map((item) => {
                    return (
                      <div>
                        <div class='flex items-center gap-5'>
                          <img
                            src={item.logo}
                            class='aspect-square h-16 rounded-full shadow-2xl'
                          />
                          <div>
                            <h4 class='font-montserrat text-3xl font-semibold text-yellow-200'>
                              {item.name}
                            </h4>
                            <h6 class='text-md font-montserrat font-normal text-lime-300'>
                              {`${item.time_s} - ${item.time_e}`}
                            </h6>
                          </div>
                        </div>
                        <h5 class='my-3 font-montserrat text-xl font-semibold text-lime-100'>
                          {item.role}
                        </h5>
                        <p class='font-montserrat text-xl text-lime-50'>
                          {item.desc}
                        </p>
                      </div>
                    )
                  })}
                </div>
              </div>
            )
          })
      }
    </div>
    <Footer />
    <script>
      import '../scripts/Almost'
    </script>
  </body>
</html>

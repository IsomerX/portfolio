---
interface Props {
  text: string
}
const { text } = Astro.props
---

<div
  class='w-full text-5xl py-14 font-montserrat font-extrabold text-white bg-blue-700 mb-24 relative'
>
  <div class='scroll-element primary flex gap-10'>
    {[...Array(10)].map((_, i) => <span>{text}</span>)}
  </div>
</div>

<style>
  .scroll-element {
    width: inherit;
    height: inherit;
    position: absolute;
    left: 0%;
    top: 50%;
    transform: translate(0%, -50%);
    animation: marquee 15s linear alternate infinite;
  }

  .scroll-element span:nth-child(2n) {
    @apply text-zinc-300;
  }

  @keyframes marquee {
    0% {
      left: 0%;
    }
    100% {
      left: -50%;
    }
  }
</style>
